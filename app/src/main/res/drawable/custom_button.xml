<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true" >
        <shape>
            <gradient
                android:startColor="#ff9b9b9b"
                android:endColor="#ffcdcdcd"
                android:angle="270" />
            <stroke
                android:width="0dp"
                android:color="#CCCCCC" />
            <corners
                android:radius="0dp" />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp" />
        </shape>
    </item>

</selector>